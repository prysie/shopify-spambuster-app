{% schema %}
{
  "name": "reCAPTCHA Spambuster",
  "target": "body",
  // "templates": ["blog", "customers/register", "customers/login", "customers/account", "customers/register"],
  "stylesheet": "reCAPTCHA-spambuster.css",
  "settings": [
    {
      "type": "header",
      "content": "reCAPTCHA v3 invisible verification."
    },
    {
      "type": "paragraph",
      "content": "For more information please refer to the google recaptcha admin [dashboard](https://www.google.com/recaptcha/admin)"
