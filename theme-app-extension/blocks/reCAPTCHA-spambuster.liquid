<script id="app-spambuster" src="{{ 'app-spambuster.js' | asset_url }}" data-contactEnabled={{ shop.metafields.spambuster.contactEnabled }} data-rcSiteKey={{ shop.metafields.spambuster.rcSiteKey }} data-spamThreshold={{ shop.metafields.spambuster.spamThreshold }} defer></script>